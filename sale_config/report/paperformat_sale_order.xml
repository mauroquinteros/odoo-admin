<odoo>
    <data>
        <record id="_paperformat_sale_order_customer_landscape" model="report.paperformat">
            <field name="name">PDF Sale Order Customer Landscape</field>
            <field name="format">A4</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">15</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="default" eval="True"/>
        </record>

        <record id="_paperformat_sale_order_customer_portrait" model="report.paperformat">
            <field name="name">PDF Sale Order Customer Portrait</field>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">15</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="default" eval="True"/>
        </record>
    </data>
</odoo>