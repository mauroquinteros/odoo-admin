                <tr style="vertical-align:top">
                    <td colspan="2" align="center" valign="top" rowspan="1">
                        <span>
                            JET PERU S.A.
                        </span>
                    </td>
                </tr>

            </t>
        </t>
    </template>
    
    <report 
        string="Ticket de OperaciÃ³n" 
